!!! 5
html(lang="en")
    head
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js", type="text/javascript")
        script(src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.14/jquery-ui.min.js", type="text/javascript")
        != SocketStream
        title TF2 Trade Chan
    body


        #itemtip.null
            .name
            .level
            .crafter
            .killeater
            .positive
            .negative
            .alt
            .neutral
            .limiteduse
            .untradable
            .ctrl

        #site.line
            .logo.unit.size1of2
                h1 tf2 trade chan

            .auth.unit.size1of2.lastUnit
                span.msg
                span#login.null
                    | Safe and Secure Login with Steam
                    a(href='/authenticate')
                        img(src='http://cdn.steamcommunity.com/public/images/signinthroughsteam/sits_small.png', height=23, width=154)
                span#logout.null
                    a.small-button(href='/logout') logout

        #user.null
            .topw
                .button-bar.bp.mb1
                    a(href="#", class="small-button", data-target="#backpack", data-loaded="") Show Backpack
                    span.msg
                    span.null Click this button to show your backpack.  You use your backpack to make trades.
                #backpack.null.mb1
                    .mb1
                        | This is your backpack.  You can use the
                        | filter and sort controls to view it
                        | differently.  When you open the trade window
                        | below, you can drag items from your backpack
                        | into your trades.

                    .bptools.null
                        include backpack_tools
                    .bpscroll
                        .bpshell
            .topw
                .button-bar.ch
                    a(href="#", class="small-button", data-target="#trades", data-loaded="") Show Trades
                    span.msg
                    span.null Click this button to show your trades.
                #trades.null
                    .mb1.mt1
                        | These are your trades.  Drag items from your backpack that you want
                        | to put up for trade.  Drag items from the item selector on the left
                        | to the wishlist area.  Then click little buttons.

                    .line
                        .tradescroll.unit.size3of5
                            .tradeshell
                        .chooser.unit.lastUnit.size2of5.chooser-alt
                            h3 Offer Types
                            .chooser-offer
                            h3.mt1 Specific Items
                            .bptools.null
                                include backpack_tools
                            .chooser-scroll
                                .shell

        #channels
            .channels-help.mb1
                | Click on a channel name to join it.  You'll
                | see trades as they are added to the channel,
                | and you can chat with other channel members.

            .channels-scroll.button-bar
                .mb1
                    a(href="#", class="small-button off", data-channel-name="commodities") Commodites
                .mb1
                    a(href="#", class="small-button off", data-channel-name="promos") Promos
                .mb1
                    a(href="#", class="small-button off", data-channel-name="unusual_hats") Unusual Hats
                div
                    a(href="#", class="small-button off", data-channel-name="vintage_hats") Vintage Hats

