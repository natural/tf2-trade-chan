@import 'helpers'
@import 'fonts'


//
// basic html element styles
//

body, html
    height 100%

body
    color ui_white2
    background-color ui_brown2
    font-family font_sec
    font-size 100%
    overflow-x hidden

h1, h2, h3, h4
    font-family font_build

h1
    font-size 125%

a, a:visited, a:active, a:hover
    color wht
    text-decoration none


//
// game item styles
//


div.item
    display inline-block
    border bord_w solid pal_gray1
    border-r(base_w)
    width item_w
    height item_h
    vertical-align top
    margin-right 4px
    margin-bottom 4px

    img
        border none
        width  (item_w - (bord_w * 2))
        height (item_w - (bord_w * 2))

div.outline
    border bord_w solid lighten(pal_gray1, 75%)
    background-color darken(pal_gray1, 25%)


div.untradable
    background-color pal_gray1

.deco
    width item_w
    height item_h
    position relative

.deco.title
    font-family font_build
    font-size 10pt
    position absolute
    top 6px
    left 0
    text-align center
    text-shadow blk 0 0 6px
    color #ebe2ca

.deco.title + img
    margin-top 3px
    margin-left 3px
    height 72px
    width 72px

.tag
    background-repeat no-repeat
    background-position left top

.tag-5020
    background-image url('/images/tags/5020.png')

.tag-5044
    background-image url('/images/tags/5044.png')

.tag-5020-5044
    background-image url('/images/tags/5020-5044.png')

div.badge
    background-color blk
    font-family font_sec
    color ui_red1
    border-r(6px)
    font-size 8pt
    position absolute
    padding 4px


div.equipped
    top 48px
    left 26px

div.craft
    top 3px
    left 3px
    font-family font_build
    &:before
        content "#"

div.quantity
    top 3px
    left 3px


//
// the item tooltip styles
//

#itemtip
    opacity(0.95)
    background-color pal_gray1
    border bord_w - 1 solid #ccc
    border-r(bord_w * 3)
    padding base_w * 2
    margin base_w
    position absolute
    text-align center
    z-index 9000
    overflow hidden

    div
        font-family font_sec
    .name
        font-family font_build
    .level
        color #756b5e
    .ctrl
        color wht
        text-align left
        font-family Andale Mono, monospace
        font-size: 75%
    .alt, .neutral, .killeater, .untradable, .painted
        color #e4dbc4
        white-space nowrap
    .positive, .crafter
        color #8dbceb
    .negative
        color #eb3b3b
    .limiteduse
        color green
    .untradable
        background-color inherit
    .painted:not(:empty)
        margin-top 1em
        &:before
            content "Painted "




//
// the site bar, at the top of the page
//

#site
    background-color wht
    border-top (bord_w/2) solid darken(wht, 50%)
    border-bottom bord_w solid pal_blue1
    padding base_p base_p base_p base_w
    color ui_brown2

    .logo, .auth
        vertical-align middle

    .auth
        text-align right
        vertical-align middle
        font-size 90%
        img
            vertical-align middle

#logout, #login
    margin-left base_w

    .small-button
        margin-left base_w
        padding-left (base_w * 2)
        padding-right (base_w * 2)


//
// the user block, for authorized users, just under the site bar.
//

#user
    border-bottom bord_w solid pal_blue1
    padding base_w 0 base_w 0
    background-color ui_brown1


#backpack
    margin base_w (base_w*4) 0 (base_w*4)
    overflow hidden
    .scroll
        background-color ui_brown1
        border-r(base_p)
        color ui_white1
        height (item_h * 4)
        margin-left 0
        margin-bottom base_w
        overflow-y auto
    .shell
        margin 0


#trades
    margin 0 (base_w*4) 0 (base_w*4)
    .scroll
        background-color ui_brown1
        border-r(base_p)
        color ui_white1
        height 500px
        height item_h * 6
        margin-left 0
        margin-right (base_w*4)




// channel stuff




.chchat
    border 1px solid pal_gray1
    background-color pal_gray2
    border-r(base_p)
    color wht
    padding (base_p)
    margin-right base_p


// the div with the list of channel users
.chusers
    overflow-x hidden
    overflow-y scroll !important
    height 200px
    margin-left base_p

.chsay
    border 1px solid blue

    input[type=text]
        border 1px solid green
        width 95%
        padding base_p
        font-family monospace



.chtalk
    overflow-x hidden
    font-family monospace
    margin-right (base_w/2)

    .sys
        color lighten(pal_gray1, 75%)

    .timestamp
        color pal_gray1

    .timestamp:before
        content "["

    .timestamp:after
        content "]"

    span.trade
        font-weight bold
        color pal_orange3

    span.trade.del
        color pal_red3
        &:before
            content "removed "

    span.trade.add
        color pal_blue2
        &:before
            content "created "

    span.trade.upd
        color pal_brown3
        &:before
            content "changed "


.chtrade
    padding base_w
    border 1px solid pal_blue2




.help
    font-size 90%
    font-family font_sec


div.trade
    padding base_p*2
    border-r(bord_w*2)
    trans(background-color, 1s)

    h3
        color darken(wht, 40%)
        margin-right base_p

    .help
        color darken(wht, 60%)
        opacity(0)
        trans(opacity, 1s)

    .button-bar
        .small-button
            background-color pal_gray1 !important
            margin-right 1em
            width inherit

        .small-button:hover
            background-color pal_red3 !important


div.trade:hover
    background-color ui_brown5
    trans(background-color, 1s)

    .help
        opacity(1)
        trans(opacity, 1s)


.trade-show-notes:not(:empty)
    border 1px solid pal_gray1
    padding base_p
    font-family Andale Mono, monospace
    font-size 90%
    width 60%

.trade-edit-notes textarea
    height 8em
    width 60%
    font-family Andale Mono, monospace
    font-size 90%



div.trade h1 span.status
    color pal_red3
    padding-left base_w


div.player span.name
    margin-left base_p
    line-height 34px

img.status
    border 2px solid
    border-r(0.15em)

img.in-game, span.in-game
    border-color #B1FB50 !important
    color #B1FB50

img.online, span.online
    border-color #6FBDFF !important
    color #6FBDFF

img.offline, span.offline
    border-color #898989 !important
    color #898989


#channels
    padding base_w
    background-color ui_brown5
    not-height 100%

#channels td
    vertical-align top


.chooser
    .scroll
        overflow-y auto !important
        height 500px !important
    h3
        color darken(wht, 40%)
        margin-bottom (base_p/2)


.main, .trade-show-notes
    color wht




//
// ui buttons and button containers
//

.button-bar .small-button
    margin-right 1em
    width (base_w * 10)

.navigator
    padding-left base_p*2 // matches padding on previous sibling (.trade)
    margin-bottom base_p

    .small-button
        width (base_w*2)
        margin-right 1em
        background-color pal_gray1 !important

    .small-button:hover
        background-color pal_red3 !important



.small-button
    background-color pal_blue3 !important
    border-r(0.35em)
    color lighten(blk, 75%)
    font-family font_build
    text-align center
    vertical-align middle
    white-space nowrap !important
    display inline-block
    padding 0.5em
    a-background -moz-linear-gradient(top, #dcd2ba, #9a8b6b)
    a-background -webkit-gradient(linear, left top, left bottom, from(#dcd2ba), to(#9a8b6b))
    font-size 80%
    color wht


.small-button:hover
    background-color pal_red3 !important
    a-background-color #512a20
    a-background  -moz-linear-gradient(top, #995040, #512a20)
    a-background  -webkit-gradient(linear, left top, left bottom, from(#995040), to(#512a20))

.small-button:active
    color lighten(blk, 50%)


.backpack-tools

    .filter.title
        margin 0 base_p 0 0
    .sort.title
        margin 0 base_p 0 (base_p*3)

