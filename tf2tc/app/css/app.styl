@import 'helpers'
@import 'fonts'


dark-gray = #222
medium-gray = #5c5c5c

s1 = 3px
s2 = 6px
s4 = 12px
s6 = 18px
s8 = 24px

iw1 = 90px


iw = 80px
ih = iw * 0.85


body, html
  height 100%


body
  color #9a9a9a
  background-color black
  font-family "TF2secondary"
  font-size s6



p
  margin-bottom 1em


h1
  font-size s8 * 1.5
  font-family "TF2Build"

h2
  font-size s8
  font-family "TF2Build"
  margin 0
  padding 0

.pb1
  padding-bottom s4
.mt1
  margin-top s4


#user-container td
  aa-border 1px solid red

#content
  padding s1


.null
  display none


#backpack, #trades
  overflow-y scroll
  height 90px * 5
  background-color black;
  padding-right s8
  margin-right s8


div.row
  height ih + s4


div.row.bot
   margin-bottom s6


div.itemw
  display inline-block

div.item
  display inline-block
  border s1 solid dark-gray
  border-r(s4)
  width iw
  height ih
  vertical-align top
  margin-right s2


div.item:hover:not(:empty)
  border 3px solid medium-gray
  background-color dark-gray
  cursor move


div.outline
  border 3px solid medium-gray
  background-color dark-gray


div.untradable
  background-color dark-gray


#tooltip .untradable
  background-color inherit


div.item img
  border none
  width iw - s2
  height iw - s2


span.nav
  display inline-block
  height s8
  width s8
  border-r(3px)
  background-color dark-gray
  color medium-gray


