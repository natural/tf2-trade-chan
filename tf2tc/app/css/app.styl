qual(10, #70b04a, #4f6d3a) // custom
qual(11, #cd9b1d, #423618) // strange



#tooltip
  opacity(0.95)
  background-color dark-gray
  border s1 - 1 solid #ccc
  border-r(s1 * 3)
  padding s8
  margin s4
  position absolute
  text-align center
  z-index 9000
  overflow hidden


#tooltip div
  font-family "TF2secondary"

#tooltip .name
  font-family "TF2Build"

#tooltip .level
  color #756b5e

#tooltip .ctrl
  color #fff
  text-align left
  font-family Andale Mono, monospace
  font-size: 0.75em

#tooltip .alt
  color #e4dbc4
  white-space nowrap

#tooltip .positive, #tooltip .crafter
  color #8dbceb

#tooltip .negative
  color #eb3b3b

#tooltip .limiteduse
  color green

