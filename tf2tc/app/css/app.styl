@import 'helpers'
@import 'fonts'

bg-black = #000
dark-gray = #222
medium-gray = #5c5c5c

s1 = 3px
s2 = 6px
s4 = 12px
s6 = 18px
s8 = 24px

iw1 = 90px


iw = 80px
ih = iw * 0.85


body, html
  height 100%

body
  color white
  background-color black
  font-family "TF2secondary"
  font-size s6
  margin s2

p
  margin-bottom s4


h1
  font-size s8 * 1.5
  font-family "TF2Build"

h2
  font-size s8
  font-family "TF2Build"
  margin 0
  padding 0


h3
  font-size s6 + 2
  font-family "TF2Build"
  margin 0
  padding 0
  color lighten(medium-gray, 25%)

h4
  font-size s6 - 2
  font-family "TF2Build"
  margin 0
  padding 0
  color darken(medium-gray, 25%)


a, a:visited, a:active, a:hover
  color white
  text-decoration none


.pb1
  padding-bottom s4

.mt1
  margin-top s4


#user-container
  background-color white


#content
  padding s1


#user-container-left
  float left
  margin-right s4
  margin-bottom s4
  width (iw * 7) - s4

#user-container-right
  float left
  width iw * 10


#user-container-right table
  width 100%

#user-container-last
  clear both

#chooser-container
  margin-top s4 * 2



#backpack, #trades, #chooser
  overflow-y scroll
  background-color black
  padding-right s8
  margin-right s8
  height 90px * 3
  padding s4
  border-r(s4)

.w
  padding s4
  background-color black
  border-r(s4*1.5)




#trades
  height 90px * 6


#user-container-left, #user-container-right
  border s1 solid dark-gray
  border-r(s4)
  padding s4
  background-color medium-gray


div.row
  height ih + s4


div.row.bot
   margin-bottom s6


div.itemw
  display inline-block

div.item
  display inline-block
  border s1 solid dark-gray
  border-r(s4)
  width iw
  height ih
  vertical-align top
  margin-right s2


div.item:hover:not(:empty)
  border 3px solid medium-gray
  background-color white


div.outline
  border 3px solid medium-gray
  background-color dark-gray


div.untradable
  background-color dark-gray


#tooltip .untradable
  background-color inherit


div.item img
  border none
  width iw - s2
  height iw - s2


