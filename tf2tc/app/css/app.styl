@import 'helpers'
@import 'fonts'


blk = #000
wht = #fff
pal_brown1 = #F6E7DE
pal_brown2 = #DABDAB
pal_brown3 = #C1A18A
pal_brown4 = #6A4534
pal_brown5 = #452C25
pal_orange1 = #F8B98A
pal_orange2 = #F5AD87
pal_orange3 = #EF9849
pal_orange4 = #F18149
pal_red1 = #913A1F
pal_red2 = #BD3A3A
pal_red3 = #9D302F
pal_gray1 = #454545
pal_gray2 = #1F1F1F
pal_blue1 = #768A88
pal_blue2 = #5B7A8C
pal_blue3 = #385C78


item_w = 80px
item_h = (item_w * 0.85)
base_w = 12px
base_p = (base_w / 2)
bord_w = (base_w / 4)


font_build = "TF2Build"
font_sec = "TF2secondary"



body, html
    height 100%
    padding base_p


body
    color wht
    background-color pal_gray2
    font-family font_sec
    font-size 100%

h1, h2, h3, h4
    font-family font_build

h1
    font-size 125%

a, a:visited, a:active, a:hover
    color wht
    text-decoration none


#backpack-container, #chooser-container, #trades-container
    background-color blk

#backpack-container, #chooser-container
    margin 0


div.row
    height item_h + base_w


div.row.bot
   margin-bottom base_w * 1.5


div.itemw
    a-display inline-block

div.item
    display inline-block
    border bord_w solid pal_gray1
    border-r(base_w)
    width item_w
    height item_h
    vertical-align top
    a-margin-right (bord_w * 2)
    margin-right 4px
    margin-bottom 4px



div.item:hover:not(:empty)
    border 3px solid pal_blue2
    background-color wht


div.outline
    border 3px solid pal_blue2
    background-color pal_gray1


div.untradable
    background-color pal_gray1


#itemtip .untradable
    background-color inherit


div.item img
    border none
    width  (item_w - (bord_w * 2))
    height (item_w - (bord_w * 2))


qual(1,  #4d7455, #3a5840) // genuine
qual(2,  #b2b2b2, #706e6e) // rare
qual(3,  #476291, #6279a1) // vintage
qual(5,  #874fad, #5a3c6b) // unusual
qual(6,  #ffd800, #9d8617) // unique
qual(7,  #70b04a, #4f6d3a) // community
qual(8,  #a50f79, #691c51) // developer
qual(9,  #70b04a, #4f6d3a) // self-made
qual(10, #70b04a, #4f6d3a) // custom
qual(11, #cd9b1d, #423618) // strange


.ztop
  z-index 9000


#itemtip
    opacity(0.95)
    background-color pal_gray1
    border bord_w - 1 solid #ccc
    border-r(bord_w * 3)
    padding base_w * 2
    margin base_w
    position absolute
    text-align center
    z-index 9000
    overflow hidden

    div
        font-family font_sec
    .name
        font-family font_build
    .level
        color #756b5e
    .ctrl
        color wht
        text-align left
        font-family Andale Mono, monospace
        font-size: 75%
    .alt, .neutral, .killeater, .untradable
        color #e4dbc4
        white-space nowrap
    .positive, .crafter
        color #8dbceb
    .negative
        color #eb3b3b
    .limiteduse
        color green


.deco
    width item_w
    height item_h
    position relative

.tag
    background-repeat no-repeat
    background-position left top

.tag-5020
    background-image url('/images/tags/5020.png')

.tag-5044
    background-image url('/images/tags/5044.png')

.tag-5020-5044
    background-image url('/images/tags/5020-5044.png')


div.badge
    background-color #fff
    font-family font_sec
    color pal_gray1
    border-r(6px)
    font-size 8pt
    position absolute
    padding 4px


div.equipped
    top 48px
    left 26px


div.quantity
    top 3px
    left 3px


.button, .small-button, .nav-button
    background-color pal_blue3
    border-r(0.35em)
    color lighten(blk, 75%)
    font-family font_build
    text-align center
    vertical-align middle
    white-space nowrap !important
    display inline-block
    padding 0.5em
    a-background -moz-linear-gradient(top, #dcd2ba, #9a8b6b)
    a-background -webkit-gradient(linear, left top, left bottom, from(#dcd2ba), to(#9a8b6b))


.button:hover, .small-button:hover
    background-color pal_red3
    a-background-color #512a20
    a-background  -moz-linear-gradient(top, #995040, #512a20)
    a-background  -webkit-gradient(linear, left top, left bottom, from(#995040), to(#512a20))


.button:active, .small-button:active
    color lighten(blk, 50%)

.small-button
    font-size 80%
    color wht

.nav-button
    font-size 200%

#user
    border-r(bord_w * 4)
    border bord_w solid pal_gray1
    background-color pal_gray2
    padding bord_w * 4


.button-bar a.small-button
    margin-right 1em


#backpack, #trades
    color wht
    position relative
    overflow hidden

#backpack
    margin-top base_w


#channels
    padding bord_w * 4
    a-width item_w * 11.5


#user, #channels
    margin 0 base_w base_w 0
    background-color blk // darken(#a0a0a3, 10%)
    border-r(bord_w * 4)
    border bord_w solid pal_gray1


#site
    border-r(bord_w * 3)
    padding bord_w * 3
    border bord_w solid pal_gray1
    color pal_gray1
    background-color pal_gray2

#main
    a-border 1px solid red


#view
    a-min-width 920px
    a-border 1px solid green

#site
    a-border 1px solid blue

.last
    clear both





.bpscroll
    overflow-y scroll
    height item_h * 6
    padding base_w
    padding-left 0
    border-top (bord_w/2) solid pal_gray1
    border-bottom (bord_w/2) solid pal_gray1
    .foo
        border-r(base_w)


.bpshell
    margin 0


