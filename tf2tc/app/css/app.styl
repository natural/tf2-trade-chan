body, html
  height 100%
  padding (base_w / 2)


body
  color gray7
  background-color gray2
  font-family "TF2secondary"


h1, h2, h3, h4
  font-family "TF2Build"

h1
  font-size 125%

a, a:visited, a:active, a:hover
  color white
  text-decoration none



#backpack-container, #chooser-container, #trades-container
  background-color black

#backpack-container, #chooser-container
  margin 0


div.row
  height item_h + base_w


div.row.bot
   margin-bottom base_w * 1.5


div.itemw
  display inline-block

div.item
  display inline-block
  border bord_w solid gray1
  border-r(base_w)
  width item_w
  height item_h
  vertical-align top
  margin-right bord_w * 2


div.item:hover:not(:empty)
  border 3px solid gray5
  background-color white


div.outline
  border 3px solid gray5
  background-color gray2


div.untradable
  background-color gray2


#itemtip .untradable
  background-color inherit


div.item img
  border none
  width item_w - bord_w * 2
  height item_w - bord_w * 2


qual(1,  #4d7455, #3a5840) // genuine
qual(2,  #b2b2b2, #706e6e) // rare
qual(3,  #476291, #6279a1) // vintage
qual(5,  #874fad, #5a3c6b) // unusual
qual(6,  #ffd800, #9d8617) // unique
qual(7,  #70b04a, #4f6d3a) // community
qual(8,  #a50f79, #691c51) // developer
qual(9,  #70b04a, #4f6d3a) // self-made
qual(10, #70b04a, #4f6d3a) // custom
qual(11, #cd9b1d, #423618) // strange

.z-top
  z-index 9000

#itemtip
  opacity(0.95)
  background-color gray2
  border bord_w - 1 solid #ccc
  border-r(bord_w * 3)
  padding base_w * 2
  margin base_w
  position absolute
  text-align center
  z-index 9000
  overflow hidden


#itemtip div
  font-family "TF2secondary"

#itemtip .name
  font-family "TF2Build"

#itemtip .level
  color #756b5e

#itemtip .ctrl
  color #fff
  text-align left
  font-family Andale Mono, monospace
  font-size: 0.75em

#itemtip .alt
  color #e4dbc4
  white-space nowrap

#itemtip .positive, #itemtip .crafter
  color #8dbceb

#itemtip .negative
  color #eb3b3b

#itemtip .limiteduse
  color green




