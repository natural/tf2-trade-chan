@import 'helpers'
@import 'fonts'


dark-gray = #222
medium-gray = #5c5c5c


body, html
  height 100%


body
  color #9a9a9a
  background-color black
  font-family "TF2secondary"
  font-size 14pt



p
  margin-bottom 1em


h1
  font-size 1.5em
  font-family "TF2Build"

h2
  font-size 1.25em
  font-family "TF2Build"

#content
  padding 0.5em


.null
  display none


#backpack, #trades
  overflow-y scroll
  height 90px*5
  background-color black;
  padding-right 24px
  margin-right 24px

div.row
  height 78px


div.row.bot
   margin-bottom 18px


div.itemw
  display inline-block

div.item
  display inline-block
  border 3px solid dark-gray
  border-r(12px)
  width 80px
  height 68px
  vertical-align top
  margin-right 4px


div.item:hover:not(:empty)
  border 3px solid medium-gray
  background-color dark-gray

div.outline
  border 3px solid medium-gray
  background-color dark-gray

div.untradable
  background-color dark-gray

div.item img
  border none
  width 66px
  height 66px
  margin-left 4px
  margin-top 4px

span.nav
  display inline-block
  height 24px
  width 24px
  border-r(3px)
  background-color dark-gray
  color medium-gray


qual(1,  #4d7455, #3a5840) // genuine
qual(2,  #b2b2b2, #706e6e) // rare
qual(3,  #476291, #6279a1) // vintage
qual(5,  #874fad, #5a3c6b) // unusual
qual(6,  #ffd800, #9d8617) // unique
qual(7,  #70b04a, #4f6d3a) // community
qual(8,  #a50f79, #691c51) // developer
qual(9,  #70b04a, #4f6d3a) // self-made
qual(10, #70b04a, #4f6d3a) // custom
qual(11, #cd9b1d, #423618) // strange



#tooltip
  opacity(0.95)
  background-color dark-gray
  border 2px solid #ccc
  border-r(8px)
  padding 24px
  margin 12px
  position absolute
  text-align center
  z-index 9002
  overflow hidden

#tooltip div
  font-family "TF2secondary"

#tooltip .name
  font-family "TF2Build"

#tooltip .level
  color #756b5e

#tooltip .ctrl
  color #fff
  text-align left
  font-family Andale Mono, monospace
  font-size: 0.75em

#tooltip .alt
  color #e4dbc4
  white-space nowrap

#tooltip .positive, #tooltip .crafter
  color #8dbceb

#tooltip .negative
  color #eb3b3b

#tooltip .limiteduse
  color green


#message-container
  border-r(12px)
  border 1px solid medium-gray


div.trade
  padding-bottom 24px

.pl1
  padding-left 1em;

.center
  width 100%
  text-align center

.text-center
  text-align center


.valign-top
  vertical-align top


.p1
  padding 1em


.notes
  height 70px
