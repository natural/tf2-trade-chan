#tooltip
  opacity(0.95)
  background-color dark-gray
  border s1 - 1 solid #ccc
  border-r(s1 * 3)
  padding s8
  margin s4
  position absolute
  text-align center
  z-index 9000
  overflow hidden


#tooltip div
  font-family "TF2secondary"

#tooltip .name
  font-family "TF2Build"

