@import 'helpers'
@import 'fonts'


blk = #000
wht = #fff
pal_brown1 = #F6E7DE
pal_brown2 = #DABDAB
pal_brown3 = #C1A18A
pal_brown4 = #6A4534
pal_brown5 = #452C25
pal_orange1 = #F8B98A
pal_orange2 = #F5AD87
pal_orange3 = #EF9849
pal_orange4 = #F18149
pal_red1 = #913A1F
pal_red2 = #BD3A3A
pal_red3 = #9D302F
pal_gray1 = #454545
pal_gray2 = #1F1F1F
pal_blue1 = #768A88
pal_blue2 = #5B7A8C
pal_blue3 = #385C78


item_w = 80px
item_h = (item_w * 0.85)
base_w = 12px
base_p = (base_w / 2)
bord_w = (base_w / 4)


font_build = "TF2Build"
font_sec = "TF2secondary"



body, html
    height 100%

body
    color blk
    background-color darken(#fff, 15%)
    font-family font_sec
    font-size 100%

h1, h2, h3, h4
    font-family font_build

h1
    font-size 125%

a, a:visited, a:active, a:hover
    color wht
    text-decoration none


div.itemw
    a-display inline-block

div.item
    display inline-block
    border bord_w solid pal_gray1
    border-r(base_w)
    width item_w
    height item_h
    vertical-align top
    margin-right 4px
    margin-bottom 4px


div.outline
    border bord_w solid lighten(pal_gray1, 75%)
    background-color darken(pal_gray1, 25%)


div.untradable
    background-color pal_gray1


#itemtip .untradable
    background-color inherit


div.item img
    border none
    width  (item_w - (bord_w * 2))
    height (item_w - (bord_w * 2))


qual(1,  #4d7455, #3a5840) // genuine
qual(2,  #b2b2b2, #706e6e) // rare
qual(3,  #476291, #6279a1) // vintage
qual(5,  #874fad, #5a3c6b) // unusual
qual(6,  #ffd800, #9d8617) // unique
qual(7,  #70b04a, #4f6d3a) // community
qual(8,  #a50f79, #691c51) // developer
qual(9,  #70b04a, #4f6d3a) // self-made
qual(10, #70b04a, #4f6d3a) // custom
qual(11, #cd9b1d, #423618) // strange


.ztop
  z-index 9000


#itemtip
    opacity(0.95)
    background-color pal_gray1
    border bord_w - 1 solid #ccc
    border-r(bord_w * 3)
    padding base_w * 2
    margin base_w
    position absolute
    text-align center
    z-index 9000
    overflow hidden

    div
        font-family font_sec
    .name
        font-family font_build
    .level
        color #756b5e
    .ctrl
        color wht
        text-align left
        font-family Andale Mono, monospace
        font-size: 75%
    .alt, .neutral, .killeater, .untradable
        color #e4dbc4
        white-space nowrap
    .positive, .crafter
        color #8dbceb
    .negative
        color #eb3b3b
    .limiteduse
        color green


.deco
    width item_w
    height item_h
    position relative

.tag
    background-repeat no-repeat
    background-position left top

.tag-5020
    background-image url('/images/tags/5020.png')

.tag-5044
    background-image url('/images/tags/5044.png')

.tag-5020-5044
    background-image url('/images/tags/5020-5044.png')


div.badge
    background-color #fff
    font-family font_sec
    color pal_gray1
    border-r(6px)
    font-size 8pt
    position absolute
    padding 4px


div.equipped
    top 48px
    left 26px


div.quantity
    top 3px
    left 3px

div.offer
    font-family font_build
    font-size 10pt
    position absolute
    top 6px
    left 0
    text-align center
    text-shadow blk 0 0 6px
    color #ebe2ca

.deco.offer + img
    margin-top 3px
    margin-left 3px
    height 72px
    width 72px


.small-button
    background-color pal_blue3 !important
    border-r(0.35em)
    color lighten(blk, 75%)
    font-family font_build
    text-align center
    vertical-align middle
    white-space nowrap !important
    display inline-block
    padding 0.5em
    a-background -moz-linear-gradient(top, #dcd2ba, #9a8b6b)
    a-background -webkit-gradient(linear, left top, left bottom, from(#dcd2ba), to(#9a8b6b))
    font-size 80%
    color wht


.small-button:hover
    background-color pal_red3 !important
    a-background-color #512a20
    a-background  -moz-linear-gradient(top, #995040, #512a20)
    a-background  -webkit-gradient(linear, left top, left bottom, from(#995040), to(#512a20))

.small-button:active
    color lighten(blk, 50%)


.button-bar .small-button
    margin-right 1em
    width (base_w * 10)



#site
    background-color wht
    border-top (bord_w/2) solid darken(wht, 50%)
    border-bottom bord_w solid blk
    padding base_p base_p base_p base_w

    .logo, .auth
        vertical-align middle

    .auth
        text-align right
        vertical-align middle
        font-size 90%
        img
            vertical-align middle

#logout, #login
    margin-left base_w

    .small-button
        margin-left base_w
        padding-left (base_w * 2)
        padding-right (base_w * 2)

#user
    border-bottom bord_w solid blk
    padding base_w 0 base_w 0


#backpack, #trades
    position relative
    overflow hidden
    margin-left (base_w*4)
    margin-right (base_w*4)


#trades .tradescroll
    margin-right (base_w*4)


#backpack
    margin-top base_w


#channels
    padding base_w
    background-color darken(#fff, 35%)
    not-height 100%


.topw
    padding-left base_w
    color blk


.bpscroll, .tradescroll
    overflow-y scroll
    height item_h * 4
    margin base_w
    margin-left 0
    background-color blk
    color wht
    padding base_w
    border-r(base_p)


.tradescroll, .chooser .bpscroll
    height item_h * 6

.bpshell
    margin 0



.mb1
    margin-bottom base_w

.mb2
    margin-bottom (base_w * 2)

.m2
    margin (base_w * 2)

.p2
    padding (base_w * 2)


.mt1
    margin-top base_w

.mt05
    margin-top (base_w/2)

.debug, .debug1
    border 1px dotted red

.debug2
    border 1px dotted green


// channel stuff


.chscroll .on
    background-color pal_red2


.chscroll .off
    background-color pal_red1


.chchat
    border 1px solid pal_gray1
    background-color pal_gray2
    border-r(base_p)
    color wht
    padding (base_p)
    margin-right base_p


// the div with the list of channel users
.chusers
    overflow-x hidden
    overflow-y scroll !important
    height 200px
    margin-left base_p

.chsay
    border 1px solid blue

    input[type=text]
        border 1px solid green
        width 95%
        padding base_p
        font-family monospace



.chtalk
    overflow-x hidden
    font-family monospace
    margin-right (base_w/2)

    .sys
        color lighten(pal_gray1, 75%)

    .timestamp
        color pal_gray1

    .timestamp:before
        content "["

    .timestamp:after
        content "]"

    span.trade
        font-weight bold
        color pal_orange3

    span.trade.del
        color pal_red3
        &:before
            content "removed "

    span.trade.add
        color pal_blue2
        &:before
            content "created "

    span.trade.upd
        color pal_brown3
        &:before
            content "changed "


.chtrade
    padding base_w
    border 1px solid pal_blue2




.help
    font-size 90%
    font-family font_sec


div.trade
    background-color blk
    padding base_p*2
    border-r(bord_w*2)
    trans(background-color, 1s)

    h3
        color darken(wht, 40%)
        margin-right base_p

    .help
        color darken(wht, 60%)
        opacity(0)
        trans(opacity, 1s)

    .button-bar .small-button
        margin-right 1em
        width inherit

    .button-bar
        .small-button
            background-color pal_gray1 !important

        .small-button:hover
            background-color pal_red3 !important


div.trade:hover
    background-color #222
    trans(background-color, 1s)

    .help
        opacity(1)
        trans(opacity, 1s)


.trade-show-notes:not(:empty)
    border 1px solid pal_gray1
    padding base_p
    font-family Andale Mono, monospace
    font-size 90%
    width 60%

.trade-edit-notes textarea
    height 8em
    width 60%
    font-family Andale Mono, monospace
    font-size 90%



div.trade h1 span.status
    color pal_red3
    padding-left base_w



div.player span.name
    margin-left base_p
    line-height 34px

img.status
    border 2px solid
    border-r(0.15em)

img.in-game, span.in-game
    border-color #B1FB50 !important
    color #B1FB50

img.online, span.online
    border-color #6FBDFF !important
    color #6FBDFF

img.offline, span.offline
    border-color #898989 !important
    color #898989


#channels td
    vertical-align top


.chshell
    margin-top base_p


.chooser-group
    h3.chooser-title, a.button
        margin-bottom base_p

    .chooserw
        margin-bottom base_w

    .title
        font-family font_build
        margin-left base_w

