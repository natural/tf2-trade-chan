div.badge
  background-color #fff
  font-family "TF2secondary"
  color gray2
  border-r(6px)
  font-size 8pt
  position absolute
  padding 4px


div.equipped
  top 48px
  left 26px


div.quantity
  top 3px
  left 3px


.button, .small-button, .nav-button
  background-color black
  border-r(0.35em)
  color lighten(black, 75%)
  font-family "TF2Build"
  text-align center
  vertical-align middle
  white-space nowrap !important
  display inline-block
  padding 0.5em
  background -moz-linear-gradient(top, #dcd2ba, #9a8b6b)
  background -webkit-gradient(linear, left top, left bottom, from(#dcd2ba), to(#9a8b6b))


.button:hover, .small-button:hover
  background-color pal_red3
  background-color #512a20
  background  -moz-linear-gradient(top, #995040, #512a20)
  background  -webkit-gradient(linear, left top, left bottom, from(#995040), to(#512a20))


.button:active, .small-button:active
  color lighten(black, 50%)

.small-button
  font-size 80%
  color white

.nav-button
  font-size 200%

#usernav
  border-r(bord_w * 4)
  border bord_w solid gray6
  background-color black
  padding bord_w * 4

.button-bar a.small-button
  margin-right 1em


#backpack, #trades
  color wht
  background-color blk
  position relative
  overflow hidden


#trades
  background-color darken(#a0a0a3, 5%)



#channelnav
  background-color darken(#a0a0a3, 10%)
  border-r(bord_w * 4)
  border bord_w solid blk
  padding bord_w * 4

#channel

#top
  border-r(bord_w * 3)
  padding bord_w * 3
  border bord_w solid blk
  color blk
  background-color wht

#top, #main, #usernav, #channelnav, #channels
  margin-bottom (base_w / 2)


.msg
  height 2em


div.bpnav
  line-height 2em

  div, a
    height 1.5em
    width 1.5em
    font-family "TF2Build"
    vertical-align middle
    text-align center
    line-height 1.5em
    display inline-block

  .non, .nav
    background-color pal_red1
    border-r(0.25em)

  .non
    color pal_gray2

  .count
    width 4em



.page
  display inline-block
  float left
  white-space nowrap !important

.bpscroll
  overflow hidden
  width 920px
  height item_h * 6

.bpshell
  margin-top base_w
  text-align center
  width (item_w * 12) * 20
  height item_h * 6
